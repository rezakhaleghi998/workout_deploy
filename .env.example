# Environment variables for Render deployment
# Copy these to your Render service environment variables

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Database (will be auto-provided by Render PostgreSQL)
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Superuser credentials (optional - for auto-creation)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=secure_admin_password_here

# Optional custom domain
# CUSTOM_DOMAIN=your-custom-domain.com
